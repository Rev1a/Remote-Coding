#include <bits/stdc++.h>
using namespace std;
using ll = long long;
constexpr double eps = 1e-8;

void solve()
{
    int n,k;
    cin >> n >> k;
    vector<ll> a(n);
    vector<ll> b(n);
    k = n-k;
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
    }
    for (int i = 0; i < n; i++)
    {
        cin >> b[i];
    }
    sort(a.begin(), a.end());
    sort(b.begin(), b.end());

    reverse(b.begin()+k,b.end());
    ll ans = 1e18;
    for (int i = k; i < n; i++)
    {
        ans = min(ans,a[i] + b[i]);
    }

    cout << ans;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T = 1;
    //cin >> T;
    while (T--)
    {
        solve();
    }

    return 0;
}
